import tkinter as tk
from tkinter import colorchooser

# Ventana principal
root = tk.Tk()
root.title("Mini Paint ")

# Variables globales para color y tama帽o
current_color = "black"
brush_size = 5

# Funci贸n para seleccionar color
def choose_color():
    global current_color
    color = colorchooser.askcolor()[1]
    if color:
        current_color = color

# Funci贸n para dibujar en el canvas
def paint(event):
    x1, y1 = event.x - brush_size, event.y - brush_size
    x2, y2 = event.x + brush_size, event.y + brush_size
    canvas.create_oval(x1, y1, x2, y2, fill=current_color, outline=current_color)

# Funci贸n para borrar todo el canvas
def clear_canvas():
    canvas.delete("all")

# Canvas para dibujar
canvas = tk.Canvas(root, bg="white", width=600, height=400)
canvas.pack(padx=10, pady=10)
canvas.bind("<B1-Motion>", paint)  # Dibujar mientras se mueve el rat贸n

# Botones
frame = tk.Frame(root)
frame.pack()

btn_color = tk.Button(frame, text="Color", command=choose_color)
btn_color.grid(row=0, column=0, padx=5)

btn_clear = tk.Button(frame, text="Borrar Todo", command=clear_canvas)
btn_clear.grid(row=0, column=1, padx=5)

# Slider para cambiar tama帽o del pincel
size_slider = tk.Scale(frame, from_=1, to=20, orient=tk.HORIZONTAL, label="Tama帽o del pincel")
size_slider.grid(row=0, column=2, padx=5)

def update_brush_size(val):
    global brush_size
    brush_size = int(val)

size_slider.config(command=update_brush_size)

root.mainloop()
